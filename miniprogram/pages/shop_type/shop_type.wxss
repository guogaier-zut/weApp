.Merchant_card {
  height: 90px;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* 圆角 */
  border-radius: 20px;
  /* 边 */
  border: 3px solid #E0E3DA;
  box-shadow:5px 5px 5px 5px #E0E3DA;
  background-color: #ffffff;
  margin: 10px;
  /* padding使得文字和图片不至于贴着边框 */
  padding: 20px;
}

/* 图片 */

.Merchant_image {
  width: 120px;
  height: 60px;
  border: gold 1px solid;
}

/* 店铺简介 */
.item_info {
  padding: 5px;
  width: 100%;
  margin-left: 25px;
  display: flex;
  flex-direction: column;
}
.item_name{
  font-size: 20px;
  color: #4b3d2c;
}
.item_content {
  font-size: 14px;
  word-break: break-all;
  color: #7a7878;
  margin-top: 5px
}
image{
  width: 40rpx;
  height: 40rpx;
}